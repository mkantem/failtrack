---
import Navbar from '../../components/Navbar.astro';
import en from '../../locales/en.json';
---
<Navbar lang="en" />
<main class="max-w-2xl mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">{en.siteTitle}</h1>
  <p class="mb-2">{en.intro}</p>
  <p class="mb-6">{en.howItWorks}</p>
  <div class="flex gap-4">
    <a href="/en/submit" class="px-4 py-2 bg-blue-600 text-white rounded">{en.links.submit}</a>
    <a href="/en/browse" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 dark:text-white rounded">{en.links.browse}</a>
  </div>
</main>
